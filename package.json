  "dependencies": {
    "bcrypt": "^3.0.6",
    "bcryptjs": "^2.4.3",
    "config": "^3.1.0",
    "express": "^4.16.4",
    "express-validator": "^5.3.1",
    "jquery": "^3.4.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.5.5",
    "nodemon": "^1.18.11",
    "react-moment": "^0.9.2",
    "validator": "^10.11.0"
  },
  "devDependencies": {
    "concurrently": "^4.1.0"
  }
}
